<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/include3"
        layout="@layout/layout_toolbar_barcode" />

    <EditText
        android:id="@+id/edtSerial"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_large"
        android:layout_marginStart="@dimen/margin_large"
        android:layout_marginTop="@dimen/margin_large"
        android:background="@drawable/bg_shadow_border"
        android:drawableEnd="@drawable/qr"
        android:drawablePadding="@dimen/_100sdp"
        android:ellipsize="end"
        android:fontFamily="@font/seguisb"
        android:inputType="textVisiblePassword"
        android:hint="@string/serial_number"
        android:maxLength="80"
        android:maxLines="1"
        android:paddingBottom="@dimen/default_padding_large"
        android:paddingEnd="@dimen/_16sdp"
        android:paddingStart="@dimen/margin_medium"
        android:paddingTop="@dimen/default_padding_large"
        android:textColor="@color/black"
        android:textColorHint="@color/gray_hint"
        android:textSize="@dimen/default_text_size_medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/include3" />

    <Button
        android:id="@+id/btnDone"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_large"
        android:layout_marginStart="@dimen/margin_large"
        android:layout_marginTop="@dimen/margin_small"
        android:background="@drawable/forgot_background_button"
        android:elevation="0dp"
        android:fontFamily="@font/segoeui"
        android:gravity="center"
        android:text="@string/done"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtSerial" />
</android.support.constraint.ConstraintLayout>