<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/ivCashBack"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_centerInParent="true"
        android:layout_marginTop="8dp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/cash_back"
        app:layout_constraintBottom_toTopOf="@+id/tvCashBack"
        app:layout_constraintEnd_toEndOf="@+id/tvCashBack"
        app:layout_constraintStart_toStartOf="@+id/tvCashBack"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/tvCashBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ivMemberships"
        android:layout_marginBottom="1dp"
        android:maxLines="1"
        android:gravity="center"
        android:text="@string/cash_back_title"
        android:textAlignment="center"
        android:textColor="@drawable/tab_selector"
        android:textSize="@dimen/default_text_size_small"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivCashBack" />
</android.support.constraint.ConstraintLayout>