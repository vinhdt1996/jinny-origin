<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlForgot_Password"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/lnToolbar"
        layout="@layout/layout_toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/lnToolbar"
        android:background="@color/snow"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/default_margin_bigger_x"
            android:layout_marginStart="@dimen/default_margin_xx_large"
            android:layout_marginEnd="@dimen/default_margin_xx_large"
            android:layout_marginTop="@dimen/default_margin_xxxx_larger"
            android:ellipsize="end"
            android:fontFamily="@font/seguisb"
            android:gravity="center"
            android:textAlignment="center"
            android:maxLines="3"
            android:text="Enter your email address below and we'll get you back on track."
            android:textColor="@color/outer_space"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/edtEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/default_margin_bigger"
            android:layout_marginLeft="@dimen/default_margin_larger_xx"
            android:layout_marginRight="@dimen/default_margin_larger_xx"
            android:layout_marginTop="@dimen/default_margin"
            android:background="@drawable/bg_shadow_border"
            android:ellipsize="end"
            android:fontFamily="@font/seguisb"
            android:hint="@string/email"
            android:inputType="textEmailAddress"
            android:maxLines="1"
            android:textColor="@color/black"
            android:textColorHint="@color/gray_hint"
            android:paddingBottom="@dimen/default_padding_bigger"
            android:paddingStart="@dimen/default_padding_large"
            android:paddingEnd="@dimen/default_padding_large"
            android:paddingTop="@dimen/default_padding_large"
            android:textSize="15sp" />

        <Button
            android:id="@+id/btnSubmitForgotPassword"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/default_margin_bigger"
            android:layout_marginLeft="@dimen/default_margin_larger_xx"
            android:layout_marginRight="@dimen/default_margin_larger_xx"
            android:layout_marginTop="@dimen/default_margin"
            android:background="@drawable/forgot_background_button"
            android:fontFamily="@font/seguisb"
            android:elevation="0dp"
            android:gravity="center"
            android:textAllCaps="false"
            android:paddingBottom="@dimen/default_padding_bigger"
            android:paddingStart="@dimen/default_padding_large"
            android:paddingEnd="@dimen/default_padding_large"
            android:paddingTop="@dimen/default_padding_large"
            android:text="@string/submit"
            android:textColor="@color/white"
            android:textSize="15sp" />
    </LinearLayout>
</RelativeLayout>